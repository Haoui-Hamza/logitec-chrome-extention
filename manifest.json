{
    "manifest_version": 3,
    "name": "MX BLITZ",
    "version": "1.0",
    "description": "An extension that makes API calls in the background",
    "action":{
      "default_icon": "icon.png",
      "default_popup": "popup.html"
    },

    "content_scripts": [
        {
            "matches": [
                "<all_urls>"
            ],
            "js": [
                "content.js"
            ]
        }
    ],
    "background": {
        "service_worker": "background.js"
    },
    "permissions": [
        "activeTab",
        "scripting",
        "storage",
        "notifications"
    ]
}