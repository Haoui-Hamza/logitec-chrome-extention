{
    "manifest_version": 3,
    "name": "My API Caller Extension",
    "version": "1.0",
    "description": "An extension that makes API calls in the background",
    "action":{
      "default_icon": "icon.png",
      "default_popup": "popup.html"
    },
    "content_scripts": [
        {
          "matches": ["<all_urls>"],
          "js": ["content.js"]
        }
    ],
    
    
    "permissions": ["activeTab", "storage"]
  }