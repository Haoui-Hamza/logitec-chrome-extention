{
    "manifest_version": 2,
    "name": "My API Caller Extension",
    "version": "1.0",
    "description": "An extension that makes API calls in the background",
    
    "content_scripts": [
        {
          "matches": ["<all_urls>"],
          "js": ["content.js"]
        }
    ],
    
    
    "permissions": ["activeTab", "storage"]
  }